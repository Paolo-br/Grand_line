<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>


<?import javafx.scene.text.Font?>
<?import javafx.scene.effect.DropShadow?>
<StackPane fx:id="root" fx:controller="application.controller.PopupCombatController"
           maxHeight="-Infinity" maxWidth="-Infinity"
           minHeight="-Infinity" minWidth="-Infinity"
           prefHeight="400.0" prefWidth="600.0"
           xmlns="http://javafx.com/javafx/23.0.1"
           xmlns:fx="http://javafx.com/fxml/1"
           style="-fx-background-image: url('/popup.jpg'); -fx-background-size: cover; -fx-background-repeat: no-repeat;">
   <children>
      <VBox alignment="CENTER" prefHeight="200.0" prefWidth="100.0" spacing="15.0">
         <children>
            <ImageView fx:id="bossImage" fitHeight="180.0" fitWidth="120.0" pickOnBounds="true" preserveRatio="true" />
            <Label text="PrÃªt pour le combat ?" textFill="#eaff00">
               <font>
                  <Font name="System Bold Italic" size="30.0" />
               </font>
               <effect>
                  <DropShadow color="black" radius="2.0" offsetX="1.0" offsetY="1.0"/>
               </effect>
            </Label>
            <Label text="Voulez-vous affronter ce boss ?">
               <font>
                  <Font name="System Bold Italic" size="30.0" />
               </font>
               <effect>
                  <DropShadow color="black" radius="2.0" offsetX="1.0" offsetY="1.0"/>
               </effect>
            </Label>
            <HBox alignment="CENTER" prefHeight="100.0" prefWidth="200.0" spacing="30.0">
               <children>
                  <Button fx:id="btnOui" mnemonicParsing="false" text="Oui" />
                  <Button fx:id="btnNon" mnemonicParsing="false" text="Non" />
               </children>
            </HBox>
         </children>
      </VBox>
   </children>
   <padding>
      <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
   </padding>
</StackPane>
